---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
}

const { title, description, pubDate, slug, tags = [] } = Astro.props;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="post-card">
  <a href={`/blog/${slug}`} class="post-link">
    <h3 class="post-title">{title}</h3>
    <p class="post-description text-muted">{description}</p>
    <div class="post-meta text-muted text-sm">
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      {tags.length > 0 && (
        <span class="tags">
          {tags.map(tag => <span class="tag">{tag}</span>)}
        </span>
      )}
    </div>
  </a>
</article>

<style>
  .post-card {
    padding: var(--space-md) 0;
  }


  .post-link {
    text-decoration: none;
    display: block;
  }

  .post-link:hover .post-title {
    opacity: 0.7;
  }

  .post-title {
    margin-bottom: var(--space-xs);
    font-size: 1.125rem;
    transition: opacity 0.15s ease;
  }

  .post-description {
    margin-bottom: var(--space-sm);
    font-size: 0.9375rem;
    line-height: 1.5;
  }

  .post-meta {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .tags {
    display: flex;
    gap: var(--space-xs);
  }

  .tag {
    opacity: 0.8;
  }
</style>
